{
  "_dna": 0,
  "project": "bimo2/libethash",
  "dependencies": {
    "Autotools": [
      "autoreconf",
      "https://www.gnu.org/software/autoconf/"
    ]
  },
  "scripts": {
    "build": {
      "?": "Automake and configure build files",
      "run": [
        "autoreconf --force --install .",
        "./configure"
      ]
    },
    "install": {
      "?": "Install headers and static/dynamic libraries",
      "run": "make install"
    },
    "clean": {
      "?": "Delete cache and build files",
      "run": "git clean -Xfd"
    }
  }
}
